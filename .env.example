# Backend Environment Variables
ENVIRONMENT=development
LOG_LEVEL=INFO
ENABLE_GPU=true

# Model Configuration
BASE_MODEL_NAME=meta-llama/Llama-3.1-8B-Instruct
MODEL_CACHE_DIR=./backend/data/models
FINGERPRINT_DIR=./backend/data/fingerprints

# Fingerprint Security
FINGERPRINT_ENCRYPTION_KEY=your-secret-key-here-generate-with-openssl
MASTER_FINGERPRINTS_FILE=guardian_master_fingerprints.enc

# Audit Configuration
DEFAULT_AUDIT_SAMPLE_SIZE=100
QUICK_AUDIT_SAMPLE_SIZE=50
DEEP_AUDIT_SAMPLE_SIZE=500
FINGERPRINT_MATCH_THRESHOLD=0.85

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Hugging Face (for model downloads)
HF_TOKEN=your_huggingface_token_here

# Optional: Sentient Configuration (for production deployment)
SENTIENT_API_KEY=
SENTIENT_AGENT_NAME=ProvenanceGuardian
SENTIENT_AGENT_DESCRIPTION=AI Model Authenticity Auditor

# Frontend Environment Variables (copy to frontend/.env.local)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000