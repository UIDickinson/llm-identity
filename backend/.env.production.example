# Production Environment Configuration

ENVIRONMENT=production
LOG_LEVEL=INFO
ENABLE_GPU=true

# Model Configuration
BASE_MODEL_NAME=meta-llama/Llama-3.1-8B-Instruct
MODEL_CACHE_DIR=/app/data/models
FINGERPRINT_DIR=/app/data/fingerprints

# Security (USE STRONG KEYS IN PRODUCTION!)
FINGERPRINT_ENCRYPTION_KEY=CHANGE_THIS_TO_A_SECURE_KEY
MASTER_FINGERPRINTS_FILE=guardian_master_fingerprints.enc

# Audit Configuration
DEFAULT_AUDIT_SAMPLE_SIZE=100
QUICK_AUDIT_SAMPLE_SIZE=50
DEEP_AUDIT_SAMPLE_SIZE=500
FINGERPRINT_MATCH_THRESHOLD=0.85

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Hugging Face
HF_TOKEN=your_production_hf_token_here

# Sentient (if deploying to Sentient Chat)
SENTIENT_API_KEY=your_sentient_api_key
SENTIENT_AGENT_NAME=ProvenanceGuardian
SENTIENT_AGENT_DESCRIPTION=AI Model Authenticity Auditor

# Performance
MAX_CONCURRENT_AUDITS=2
MODEL_CACHE_SIZE_GB=50
ENABLE_MODEL_QUANTIZATION=false

# Monitoring (Optional)
SENTRY_DSN=
LOG_FILE=/app/logs/guardian.log